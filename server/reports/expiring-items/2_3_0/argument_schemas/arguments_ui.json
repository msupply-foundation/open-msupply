{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/expiryDate",
      "label": "Expiry Date",
      "options": {
        "dateOnly": true
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/itemCodeOrName",
      "label": "Item Code or Name",
      "options": {
        "useDebounce": false,
        "flexBasis": "90%"
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/monthlyConsumptionLookBackPeriod",
      "label": "AMC Lookback Period",
      "options": {
        "inputAlignment": "end",
        "paddingRight": 25
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/monthsOverstock",
      "label": "Target MOS",
      "options": {
        "inputAlignment": "end",
        "paddingRight": 25
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/monthsUnderstock",
      "label": "Reorder threshold MOS",
      "options": {
        "inputAlignment": "end",
        "paddingRight": 25
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/monthsItemsExpire",
      "label": "Expiring item period",
      "options": {
        "inputAlignment": "end",
        "paddingRight": 25
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/sort",
      "label": "Sort by:",
      "options": {
        "show": [
          ["item.name", "item"],
          ["item.code", "code"],
          ["expiryDate", "expiry date"],
          ["daysUntilExpired", "days until expired"],
          ["stockAtRisk", "stock at risk"],
          ["expectedUsage", "expected usage"]
        ]
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/dir",
      "label": "Sort direction"
    }
  ]
}
