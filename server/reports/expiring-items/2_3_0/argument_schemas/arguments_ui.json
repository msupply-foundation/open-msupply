{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/expiryDate",
      "label": "T#report.expiry-date",
      "options": {
        "dateOnly": true
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/itemCodeOrName",
      "label": "T#report.item-code-or-name",
      "options": {
        "useDebounce": false,
        "flexBasis": "90%"
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/monthlyConsumptionLookBackPeriod",
      "label": "T#report.AMC-lookback",
      "options": {
        "inputAlignment": "end",
        "paddingRight": 25
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/monthsOverstock",
      "label": "T#label.max-months-of-stock",
      "options": {
        "inputAlignment": "end",
        "paddingRight": 25
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/monthsUnderstock",
      "label": "T#label.min-months-of-stock",
      "options": {
        "inputAlignment": "end",
        "paddingRight": 25
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/monthsItemsExpire",
      "label": "T#label.expiring-item-period",
      "options": {
        "inputAlignment": "end",
        "paddingRight": 25
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/sort",
      "label": "Sort by:",
      "options": {
        "show": [
          ["item.name", "item"],
          ["item.code", "code"],
          ["expiryDate", "expiry date"],
          ["daysUntilExpired", "days until expired"],
          ["stockAtRisk", "stock at risk"],
          ["expectedUsage", "expected usage"]
        ]
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/dir",
      "label": "Sort direction"
    }
  ]
}
