{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Group",
      "label": "heading.patient-details",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/firstName",
          "label": "label.first-name",
          "options": {
            "autoFocus": true
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/lastName",
          "label": "label.last-name"
        },
        {
          "type": "Control",
          "label": "label.date-of-birth",
          "scope": "#/properties/dateOfBirth",
          "options": {
            "disableFuture": true
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/gender",
          "label": "label.gender",
          "options": {
            "preferenceKey": "genderOptions"
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/address1",
          "label": "label.address"
        },
        {
          "type": "Control",
          "scope": "#/properties/phone",
          "label": "label.phone"
        }
      ]
    }
  ]
}
