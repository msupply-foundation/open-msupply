{
  "type": "HorizontalLayout",
  "elements": [
    {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "Group",
          "label": "heading.patient-details",
          "elements": [
            {
              "type": "IdGenerator",
              "label": "label.code",
              "scope": "#/properties/code",
              "options": {
                "parts": [
                  {
                    "type": "StoreName",
                    "mutations": [{ "firstNChars": 3 }, { "toUpperCase": true }]
                  },
                  {
                    "type": "Number",
                    "numberName": "PatientCode",
                    "mutations": [{ "padString": "0000" }]
                  }
                ],
                "allowManualEntry": true,
                "validations": [
                  {
                    "type": "UniquePatientCode"
                  }
                ]
              }
            },
            {
              "type": "Control",
              "label": "label.code2",
              "scope": "#/properties/code2"
            },
            {
              "type": "Control",
              "scope": "#/properties/firstName",
              "label": "label.first-name"
            },
            {
              "type": "Control",
              "scope": "#/properties/lastName",
              "label": "label.last-name"
            },
            {
              "type": "DateOfBirth",
              "label": "label.date-of-birth",
              "scope": "#",
              "options": {
                "hideClear": true
              }
            },
            {
              "type": "Control",
              "scope": "#/properties/gender",
              "label": "label.gender",
              "options": {
                "preferenceKey": "genderOptions"
              }
            },
            {
              "type": "Control",
              "scope": "#/properties/address1",
              "label": "label.address"
            },
            {
              "type": "Control",
              "scope": "#/properties/phone",
              "label": "label.phone"
            }
          ]
        }
      ]
    },
    {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "Search",
          "scope": "#/properties/nextOfKin",
          "label": "label.next-of-kin",
          "options": {
            "source": "user",
            "searchFields": ["name"],
            "saveFields": ["id", "name"],
            "elements": [
              {
                "type": "Control",
                "scope": "/properties/name",
                "label": "label.name"
              }
            ]
          }
        },
        {
          "type": "Group",
          "label": "label.death",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/isDeceased",
              "label": "label.deceased"
            },
            {
              "type": "Control",
              "scope": "#/properties/dateOfDeath",
              "label": "label.date-of-death",
              "rule": {
                "effect": "HIDE",
                "condition": {
                  "scope": "#/properties/isDeceased",
                  "schema": {
                    "const": false
                  }
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
